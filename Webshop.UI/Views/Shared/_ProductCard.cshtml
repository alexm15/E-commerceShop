@model E_commerce.Library.Product
<div class="col-md-4">
    <a href="@Url.Action("Details", "Product", new {id = Model.Id})" class="panel panel-default center-block">
        <div class="panel-heading"><h4>@Model.Name</h4></div>
        <div class="panel-body">
            @Html.DisplayFor(p => p.Price)
            <br />
            @Model.Description
        </div>
    </a>
</div>
